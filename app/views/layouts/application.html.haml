!!!
%html
  %head
    %title Qna
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %div.container
      %header
        - if signed_in?
          вы вошли как
          = current_user.email
          | 
          = link_to 'выйти', destroy_user_session_path, method: "delete"
        - else
          = link_to 'войти', new_user_session_path
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert
      = yield