= nested_form_for @question do |f|
  = render 'shared/error_messages', target: @question
  %fieldset
    = f.text_field :title, placeholder: t('helpers.label.question.title')
    = f.text_area :body, placeholder: t('helpers.label.question.body')
    = f.text_field :tag_list, placeholder: t('helpers.label.question.tag_list')
    = f.fields_for :attachments, @question.attachments.build do |a|
      = a.label :file
      = a.file_field :file
      = a.link_to_remove "Удалить файл"
    = f.link_to_add "Добавить файл", :attachments, class: "add_file"
    %br
    = f.submit "Сохранить вопрос"