- @question.answers.order(created_at: :asc).each do |answer|
  - if answer.persisted?
    = answer.body
    %ul
      - answer.attachments.each do |a|
        %li= link_to a.file.identifier, a.file.url
    - if signed_in? && answer.author?(current_user)
      %p= link_to 'редактировать ответ', '', class: 'edit-answer-link', data: { answer_id: answer.id }
      %p
        = form_for [@question, answer], remote: true, html: { id: "edit-answer-#{answer.id}"} do |f|
          %fieldset
            = f.label :body, I18n.t('answer_body')
            .answer-errors
            = f.text_area :body, rows: 10
            = f.fields_for :attachments do |a|
              = a.label :file
              = a.file_field :file
            = f.submit "Сохранить ответ"
    %hr